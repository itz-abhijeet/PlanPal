<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoveClassroom"
    android:orientation="vertical"
    android:background="@color/light_grey"
    >

    <TextView
        android:id="@+id/RemoveClassroom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/teachers"
        android:text="Remove Classroom"
        android:textAlignment="center"
        android:textColor="@color/whale_blue"
        android:layout_marginVertical="50dp"
        />
    
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No classrooms available"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:fontFamily="@font/teachers"
        android:layout_centerInParent="true"
        android:textColor="@color/whale_blue"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/RemoveClassroom_title"
        android:id="@+id/rv_classrooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        />

</RelativeLayout>

</ScrollView>