<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/RemoveClassroom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="@font/teachers"
            android:text="Add Teacher - Subject"
            android:textAlignment="center"
            android:textColor="@color/whale_blue"
            android:layout_marginVertical="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whale_blue"
            android:fontFamily="@font/teachers"
            android:text="Class 1"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <LinearLayout android:id="@+id/layoutClass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whale_blue"
            android:fontFamily="@font/teachers"
            android:text="Class 2"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:textSize="20sp"/>

        <LinearLayout android:id="@+id/layoutClass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whale_blue"
            android:fontFamily="@font/teachers"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:text="Class 3"
            android:textSize="20sp"/>

        <LinearLayout android:id="@+id/layoutClass3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button android:id="@+id/btnSave"
            android:text="Save Assignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/whale_blue"
            android:textColor="@color/white"
            android:fontFamily="@font/teachers"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:layout_gravity="right" />
    </LinearLayout>
</ScrollView>
