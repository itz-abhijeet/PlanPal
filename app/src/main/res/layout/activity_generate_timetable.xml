<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateTimetable">

    <View
        android:id="@+id/GenerateTimetable_bg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/top_background"
        />

    <TextView
        android:id="@+id/addTeacher_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Teacher"
        android:textStyle="bold"
        android:paddingHorizontal="35dp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/addTeacher_titledes"
        android:layout_below="@id/addTeacher_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlanPal is and applicaion that allows you to generate college timetable."
        android:paddingHorizontal="35dp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/addTeacher_InputSectionCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addTeacher_titledes"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">



    </androidx.cardview.widget.CardView>
</RelativeLayout>