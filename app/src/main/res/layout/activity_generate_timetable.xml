<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg_white"
    >

    <Button
        android:id="@+id/generateTimetableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Timetable"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/whale_blue"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/nameofInstitute"
        android:layout_below="@id/generateTimetableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JSPM's \n Jayawantrao Sawant Polytechnic"
        android:fontFamily="@font/teachers"
        android:textColor="@color/whale_blue"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ScrollView
        android:id="@+id/timetablelayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameofInstitute">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/nameofInstitute">

            <TextView
                android:id="@+id/class1text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class 1"
                android:fontFamily="@font/teachers"
                android:textColor="@color/whale_blue"
                android:textAlignment="viewStart"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:textSize="17sp"
                />

            <TableLayout
                android:id="@+id/timetableTable1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:divider="@color/black"
                android:showDividers="middle"
                android:dividerHeight="2dp"
                android:textAlignment="center"
                >

            </TableLayout>

            <TextView
                android:id="@+id/class2text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class 2"
                android:fontFamily="@font/teachers"
                android:textColor="@color/whale_blue"
                android:textAlignment="viewStart"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:textSize="17sp"
                />

            <TableLayout
                android:id="@+id/timetableTable2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:divider="@color/black"
                android:showDividers="middle"
                android:dividerHeight="2dp"
                >
            </TableLayout>

            <TextView
                android:id="@+id/class3text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class 3"
                android:fontFamily="@font/teachers"
                android:textColor="@color/whale_blue"
                android:textAlignment="viewStart"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:textSize="17sp"
                />

            <TableLayout
                android:id="@+id/timetableTable3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:divider="@color/black"
                android:showDividers="middle"
                android:dividerHeight="2dp"
                >
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/savePdfButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/timetablelayout"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:backgroundTint="@color/whale_blue"
        android:text="Save"
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/white"
        android:visibility="gone"
        />

</RelativeLayout>

</ScrollView>