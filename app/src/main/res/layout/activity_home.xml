<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/light_grey"
    >

    <View
        android:id="@+id/Home_bg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/top_background"
        />

    <TextView
        android:id="@+id/Home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome,"
        android:textStyle="bold"
        android:paddingHorizontal="35dp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/Home_titledes"
        android:layout_below="@id/Home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlanPal is and applicaion that allows you to generate college timetable."
        android:paddingHorizontal="35dp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        />

    <GridLayout
        android:id="@+id/Home_grid1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_below="@id/Home_titledes"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="50dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/white"
            >
            <LinearLayout
                android:id="@+id/Home_addClassroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/vector_class"
                    app:tint ="@color/whale_blue"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Add Classroom"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/teachers"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/white"
            >
            <LinearLayout
                android:id="@+id/Home_addTeacher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/image_teacher"
                    app:tint="@color/whale_blue"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Add Teacher"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/teachers"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/white"
            >
            <LinearLayout
                android:id="@+id/Home_generateTimetable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/image_timetable"
                    app:tint="@color/whale_blue"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Generate Timetable"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/teachers"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/white"
            >
            <LinearLayout
                android:id="@+id/Home_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/image_user"
                    app:tint="@color/whale_blue"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/teachers"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <View
        android:id="@+id/Home_foot"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/whale_blue"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>