<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@color/light_grey"
    >

    <ImageButton
        android:id="@+id/Dashboard_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/image_arrow_back"
        android:background="@color/transparent"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:tint="@color/whale_blue"
        android:contentDescription="Back Button"
        />


    <TextView
        android:id="@+id/Dashboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textStyle="bold"
        android:paddingHorizontal="35dp"
        android:fontFamily="@font/teachers"
        android:textColor="@color/whale_blue"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_below="@id/Dashboard_back"
        />

    <ScrollView
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@id/Dashboard_title"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="0dp"
            android:layout_marginHorizontal="40dp"
            >

            <TextView
                android:id="@+id/Dashboard_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Options"
                android:textStyle="bold"
                android:fontFamily="@font/teachers"
                android:textColor="#CC303349"
                android:textSize="25sp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="left"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/image_arrow_right"
                android:fontFamily="@font/teachers"
                android:gravity="center_vertical"
                android:text="Pre-generated Timetables"
                android:textColor="@color/whale_blue"
                android:textSize="17sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Teacher assignment"
                android:fontFamily="@font/teachers"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/whale_blue"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/image_arrow_right"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Remove Teacher"
                android:fontFamily="@font/teachers"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/whale_blue"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/image_arrow_right"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Remove Classroom"
                android:fontFamily="@font/teachers"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/whale_blue"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/image_arrow_right"
                />

            <Button
                android:id="@+id/Dashboard_ContactUs"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Support/ Contact Us"
                android:fontFamily="@font/teachers"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/whale_blue"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/image_arrow_right"
                />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_shape_background"
        android:fontFamily="@font/teachers"
        android:gravity="center_vertical"
        android:text="PlanPal"
        android:textAlignment="center"
        android:textColor="#CCECE9E9"
        android:textSize="25sp"
        tools:ignore="RtlCompat" />

</RelativeLayout>