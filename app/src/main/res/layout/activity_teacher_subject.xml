<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherSubject"
    android:background="@color/light_grey"
    >

    <TextView
        android:id="@+id/teacherSubject_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/teachers"
        android:paddingHorizontal="35dp"
        android:text="Teacher - Subject"
        android:textAlignment="center"
        android:textColor="@color/whale_blue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/teacherSubject_title"
        >


        <Button
            android:id="@+id/teacherSubject_AddteacherSubject"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Add Teacher-Subject"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/teachers"
            android:backgroundTint="@color/white"
            />

<!--        <Button-->
<!--            android:id="@+id/teacherSubject_RemoveteacherSubject"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="80dp"-->
<!--            android:text="Remove Teacher-Subject"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="20sp"-->
<!--            android:fontFamily="@font/teachers"-->
<!--            android:backgroundTint="@color/white"-->
<!--            />-->

        <Button
            android:id="@+id/teacherSubject_ViewteacherSubject"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="View Teacher-Subject"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/teachers"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/teacherSubject_footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_shape_background"
        android:fontFamily="@font/teachers"
        android:gravity="center_vertical"
        android:text="PlanPal"
        android:textAlignment="center"
        android:textColor="#CCECE9E9"
        android:textSize="25sp"
        tools:ignore="RtlCompat" />

</RelativeLayout>